<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <fragment
        android:id="@+id/bikes"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="-1dp" />

    <Button
        android:id="@+id/seecards"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="570dp"
        android:background="@drawable/roundedbutton"
        android:gravity="center|center_vertical"
        android:text="Set Request"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/tasks"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/arrow_up"
        android:gravity="center"
        android:text="See Tasks" />

    <ImageView
        android:id="@+id/report_problem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/returnbikes"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/info"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/returnbikes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/backgroudBike"
        android:src="@drawable/bike1" />

</RelativeLayout>
